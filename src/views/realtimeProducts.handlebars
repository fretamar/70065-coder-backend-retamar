<div>
    <h1>Backend - Francisco Retamar <i>#70065</i></h1>

    <form action="submit" id="agregarProductos">
        <label for="title">Título:</label>
        <input type="text" name="title" size="40" maxLength="100" placeholder="Nombre del producto" id="title" required>
        <br><br>
        <label for="description">Descripción:</label>
        <input type="text" name="description" size="70" maxLength="500" placeholder="Información relevante del producto"
            id="description" required>
        <br><br>
        <label for="price">Precio:</label>
        <input type="number" name="price" placeholder="2000" id="price" required>
        <br><br>
        <label for="stock">Cantidad:</label>
        <input type="number" name="stock" placeholder="100" id="stock" required>
        <br><br>
        <label for="category">Categoría:</label>
        <input type="text" name="category" maxLength="100" placeholder="Tipo de producto" id="category" required>
        <br><br>
        <button type="submit"><b>Agregar producto</b></button>
    </form>

    {{#if isValid}}
    <div id="listaDeProductos">
        {{#each productosRealTime}}
        <div class="producto" id="{{this._id}}">
            <p>Titulo: {{this.title}}</p>
            <p>Descripción: {{this.description}}</p>
            <p>Precio: {{this.price}}</p>
            <p>Cantidad: {{this.stock}}</p>
            <p>Categoría: {{this.category}}</p>
            <button class="eliminarProducto" data-id="{{this._id}}">Eliminar Producto</button>
            <button class="agregarCarrito" data-id="{{this._id}}">Agregar a carrito</button>

        </div>
        {{/each}}
    </div>
    <br />
    <div>
        {{#if hasPrevPage}}
        <a href="{{prevLink}}">
            << Anterior</a>
                {{/if}}
                &nbsp
                {{page}}
                &nbsp
                {{#if hasNextPage}}
                <a href="{{nextLink}}">Siguiente >></a>
                {{/if}}
    </div>
    {{else}}
    <h1>No hay productos para mostrar</h1>
    {{/if}}
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/index.js"></script>
<script src="/socket.io/socket.io.js"></script>